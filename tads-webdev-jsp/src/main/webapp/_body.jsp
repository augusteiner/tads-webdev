<section>

  <fieldset>
  
    <legend>Autenticação</legend>
  
    <form method="post" action="login">
  
      <div>
        <label for="username">
          Login
        </label>
      </div>
      <div>
        <input id="username" name="username" type="text" placeholder="Login de usuário">
      </div>
  
      <div>
        <label for="password">
          Senha
        </label>
      </div>
      <div>
        <input id="password" name="password" type="password" placeholder="Senha de acesso">
      </div>
  
      <div>
        <button type="submit">
          Login
        </button>
      </div>
  
    </form>

  </fieldset>

</section>